{
  "compilerOptions": {
    "target": "es2021",
    "types": ["node", "jest"],
    "lib": ["es2021"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@libs/dynamodb": ["libs/dynamodb/index"],
      "@libs/user": ["libs/user/index"],
      "@libs/list": ["libs/list/index"],
      "@libs/task": ["libs/task/index"],
      "@libs/generic/util": ["libs/generic/util"],
      "@libs/generic/errors": ["libs/generic/errors"],
      "@test-utils/*": ["test-utils/*"]
    }
  },
  "include": ["src/**/*", "jest.config.ts"]
}
